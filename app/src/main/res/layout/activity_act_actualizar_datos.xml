<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    tools:context=".Fragments.FragSubirObra">

    <include layout="@layout/layout_menu_superior" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:paddingEnd="30dp"
        android:paddingBottom="30dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/IsLayCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes_redondeados"
                android:backgroundTint="#A6A1BBCE"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/IsTxtTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Actualizar Datos"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/IsTxtDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Ingresa la siguiente información:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correo Electrónico"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editredondo"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:hint="ejemplo@gmail.com"
                    android:paddingStart="25dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#202020"
                    android:inputType="textEmailAddress"
                    android:enabled="false"
                    android:focusable="false"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/tvNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Nombre"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editredondo"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:hint="ejemplo"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#202020"
                    android:inputType="textPersonName" />
                <TextView
                    android:id="@+id/tvDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Descripcion"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/editredondo"
                    android:gravity="top|start"
                    android:hint="Descripción Personal"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:padding="10dp"
                    android:textColor="#202020" />

                <TextView
                    android:id="@+id/tvRedes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Redes Sociales"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/redes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/editredondo"
                    android:gravity="top|start"
                    android:hint="ejemplo"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:padding="10dp"
                    android:textColor="#202020" />

                <TextView
                    android:id="@+id/tvTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Teléfono"
                    android:fontFamily="sans-serif-black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/telefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editredondo"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:hint="55XXXXXXXXX"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#202020"
                    android:inputType="phone"
                    android:maxLength="10" />

                <TextView
                    android:id="@+id/tvFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha de Nacimiento"
                    android:fontFamily="sans-serif-black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/CrcEdtFecha"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/editredondo"
                    android:hint="DÍA / MES / AÑO"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#202020"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:textCursorDrawable="@null" />

                <TextView
                    android:id="@+id/tvUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Usuario "
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/usuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/editredondo"
                    android:hint="SuperMariposonejemplo"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#202020"
                    android:inputType="textPersonName"
                    android:enabled="false"
                    android:focusable="false"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/tvContra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Contraseña"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/contra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/editredondo"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="#202020"
                    android:inputType="text" />
                <Button
                    android:id="@+id/btnActualizarDatos"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Actualizar"
                    android:padding="10dp"
                    android:layout_marginBottom="24dp"
                    android:backgroundTint="#6C6C6C"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal" />

                <Button
                    android:id="@+id/btnRegresar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:backgroundTint="#C0A898"
                    android:text="Regresar" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>