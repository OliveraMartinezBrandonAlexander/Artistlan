<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/fondocrearcuenta"
    tools:context=".Activitys.ActCrearCuenta">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/bordes_redondeados"
        android:backgroundTint="#A6A1BBCE">

        <TextView
            android:id="@+id/texto1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Completa los datos que se solicitan"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/texto2"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:text="--------------------------------------"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
           />
        <TextView
            android:id="@+id/texto3"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Correo Electrónico"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-black"
            />
        <EditText

            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editredondo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="ejemplo@gmail.com"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"

            ></EditText>
        <TextView
            android:id="@+id/texto4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Nombre"

            android:fontFamily="sans-serif-black"
            />
        <EditText

            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editredondo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="ejemplo"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"

            ></EditText>
        <TextView
            android:id="@+id/texto5"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Teléfono"

            android:fontFamily="sans-serif-black"
            />
        <EditText

            android:id="@+id/Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editredondo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="55XXXXXXXXX"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"

            ></EditText>
        <TextView
        android:id="@+id/texto6"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Fecha de Nacimiento"

        android:fontFamily="sans-serif-black"
        />

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/Fecha"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/editredondo"
            android:clickable="true"
            android:hint="DIA/MES/AÑO"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"></TextView>
        <TextView
            android:id="@+id/texto7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Usuario (este será el nombre que todos podrán visualizar, puedes modificarlo más adelante)"

            android:fontFamily="sans-serif-black"
            />
        <EditText

            android:id="@+id/usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editredondo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="SuperMariposonejemplo"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

        </EditText>
        <TextView
            android:id="@+id/texto8"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Genera una contraseña segura.(está debe de tener al menos 8 caracteres, una mayúscula, una minúscula, un numero y un carácter especial)"

            android:fontFamily="sans-serif-black"
            />
        <EditText

            android:id="@+id/contrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editredondo"

            android:layout_marginBottom="10dp"
            android:hint="Ejemplo2_!"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"

            ></EditText>
        <TextView
            android:id="@+id/texto9"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Confirmar Contraseña"

            android:fontFamily="sans-serif-black"
            />
        <EditText

            android:id="@+id/Confirma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editredondo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:hint="Ejemplo2_!"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"

            ></EditText>
        <Button
            android:id="@+id/btnCrear"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="CREAR CUENTA"
            android:padding="10dp"
            android:layout_marginBottom="80dp"
            android:backgroundTint="#6C6C6C"
            android:textColor="#000000"

            android:layout_gravity="center_horizontal"
            />



    </LinearLayout>


</LinearLayout>