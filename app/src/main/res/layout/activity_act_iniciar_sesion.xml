<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/IsLayMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/fondois"
    tools:context=".Activitys.ActIniciarSesion">

    <LinearLayout
        android:id="@+id/IsLayCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/bordes_redondeados"
        android:backgroundTint="#A6A1BBCE">

        <!-- Título -->
        <TextView
            android:id="@+id/IsTxtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inicio de Sesión"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            android:textSize="16sp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/IsTxtSeparador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="--------------------------------------"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/IsTxtDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresa lo siguiente:"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            android:textSize="16sp"
            android:padding="5dp" />

        <!-- Correo -->
        <TextView
            android:id="@+id/IsTxtCorreoLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo Electrónico"
            android:fontFamily="sans-serif-black"
            android:textSize="14sp"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/correoinicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editredondo"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:hint="ejemplo@gmail.com"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:inputType="textEmailAddress"
            android:textColor="#202020" />

        <!-- Usuario -->
        <TextView
            android:id="@+id/IsTxtUsuarioLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario"
            android:fontFamily="sans-serif-black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/usuarioinicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editredondo"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="12dp"
            android:hint="SuperMariposone"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:inputType="textPersonName"
            android:textColor="#202020" />

        <!-- Contraseña -->
        <TextView
            android:id="@+id/IsTxtPassLbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña"
            android:fontFamily="sans-serif-black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/contrainicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editredondo"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="20dp"
            android:hint="Ejemplo2_!"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:inputType="textPassword"
            android:textColor="#202020" />

        <!-- Botón Iniciar Sesión -->
        <Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="INICIAR SESIÓN"
            android:padding="10dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#6C6C6C"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>