<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@drawable/fondois"
    tools:context=".Activitys.ActIniciarSesion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/bordes_redondeados"
        android:backgroundTint="#A6505A74">

        <TextView
            android:id="@+id/texto1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Inicio de Sesión"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/texto2"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:text="--------------------------------------"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            />
        <TextView
            android:id="@+id/texto3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Ingresa lo siguiente:"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            android:padding="5dp"
            />

        <TextView
            android:id="@+id/texto4"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Correo electronico"

            android:fontFamily="sans-serif-black"
            />
        <EditText

            android:id="@+id/correoinicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editredondo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="ejemplo"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"

            ></EditText>
        <TextView
            android:id="@+id/texto5"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Usuario"

            android:fontFamily="sans-serif-black"
            />
        <EditText

            android:id="@+id/usuarioinicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editredondo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:hint="55XXXXXXXXX"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"

            ></EditText>
        <TextView
            android:id="@+id/texto6"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="Contraseña"

            android:fontFamily="sans-serif-black"
            />


        <EditText

            android:id="@+id/contrainicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editredondo"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="80dp"
            android:hint="SuperMariposonejemplo"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

        </EditText>


        <Button
            android:id="@+id/btnIniciarSesion"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="80dp"
            android:backgroundTint="#6C6C6C"
            android:padding="10dp"
            android:text="INICIAR SESION"

            android:textColor="#000000" />


    </LinearLayout>
</LinearLayout>