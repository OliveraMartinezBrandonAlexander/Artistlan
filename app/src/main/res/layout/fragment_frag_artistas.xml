<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.FragArtistas">

    <include layout="@layout/layout_menu_superior" />

    <!-- Carrusel de profesiones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/light_gray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filtrar por ProfesiÃ³n"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/btnCarruselIzquierdoArtistas"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_previous"
                android:layout_marginRight="8dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCarruselArtistas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btnCarruselDerechoArtistas"
                android:layout_toRightOf="@+id/btnCarruselIzquierdoArtistas" />

            <ImageButton
                android:id="@+id/btnCarruselDerechoArtistas"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_media_next"
                android:layout_marginLeft="8dp" />

        </RelativeLayout>

        <Button
            android:id="@+id/btnAplicarFiltroArtistas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplicar Filtro"
            android:layout_gravity="center"
            android:backgroundTint="@color/purple_500"
            android:textColor="@color/white"
            android:paddingHorizontal="24dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Lista de artistas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerArtistas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"/>

</LinearLayout>