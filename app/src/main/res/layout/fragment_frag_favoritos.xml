<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.FragFavoritos">

    <include layout="@layout/layout_menu_superior" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:id="@+id/contenedorPrincipal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp">

        <FrameLayout
            android:id="@+id/segmentContainerFavoritos"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_segment_container"
            android:padding="4dp">

            <View
                android:id="@+id/segmentIndicatorFavoritos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_segment_indicator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnArte"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="ARTE"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnArtista"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:text="ARTISTA"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textColor="#1E3A8A" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/contenedorFragmentsFavoritos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            android:minHeight="400dp" />

        <ImageButton
            android:id="@+id/btnRegresar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/regresarimg"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:padding="4dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</LinearLayout>
