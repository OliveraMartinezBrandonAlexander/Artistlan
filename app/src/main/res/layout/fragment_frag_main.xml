<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.FragMain">

    <!-- MENÚ SUPERIOR DENTRO DEL FRAGMENT -->
    <include
        android:id="@+id/menuSuperior"
        layout="@layout/layout_menu_superior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <!-- CONTENIDO SCROLLEABLE -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContenido"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- TÍTULO PRINCIPAL -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="BIENVENIDO A ARTISTLAN"
                android:textColor="@android:color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-condensed-medium"/>

            <!-- SUBTÍTULO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:text="Top del semestre"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"/>

            <!-- SECCIÓN DEL CARRUSEL -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <!-- Botón Izquierdo -->
                <ImageButton
                    android:id="@+id/btnCarruselIzquierdo"
                    android:layout_width="40dp"
                    android:layout_height="200dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/botonizquierdoprincipal"
                    android:scaleType="fitCenter"
                    android:contentDescription="Imagen anterior"/>

                <!-- Contenedor de la Imagen (CardView) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCarrusel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/btnCarruselIzquierdo"
                    android:layout_toStartOf="@id/btnCarruselDerecho"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Info Usuario / Likes -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingBottom="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/usuario"
                                android:contentDescription="Perfil"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Superman"
                                android:textStyle="bold"
                                android:textColor="@android:color/black"/>

                            <TextView
                                android:id="@+id/tvLikesCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="135K"
                                android:textColor="@android:color/black"/>

                            <ImageButton
                                android:id="@+id/btnLike"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="4dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_heart_red"
                                android:contentDescription="Dar like"
                                android:scaleType="fitCenter"/>
                        </LinearLayout>

                        <!-- Imagen de la obra -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_eg"
                            android:background="@android:color/darker_gray"
                            android:contentDescription="Obra de Arte Principal"/>

                        <!-- Título y descripción -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="TITULO DE LA OBRA"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="DESCRIPCIÓN BREVE"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Botón Derecho -->
                <ImageButton
                    android:id="@+id/btnCarruselDerecho"
                    android:layout_width="40dp"
                    android:layout_height="200dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/botonderechoprincipal"
                    android:scaleType="fitCenter"
                    android:contentDescription="Siguiente imagen"/>
            </RelativeLayout>

            <!-- SECCIÓN EVENTOS PRÓXIMOS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:text="Eventos próximos:"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <!-- Contenedor de eventos tipo CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:padding="12dp"
                android:backgroundTint="#F0F0F0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <!-- Evento 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="• Concurso de óleo en Bellas Artes\nFECHA:\nDESCRIPCIÓN:\nREQUISITOS:"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"/>

                        <Button
                            android:id="@+id/btnEvento1"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Saber Más!"
                            android:textSize="12sp"
                            android:backgroundTint="#A1BBCE"/>
                    </LinearLayout>

                    <!-- Evento 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="• Concurso de óleo en Artes Bellas\nFECHA:\nDESCRIPCIÓN:\nREQUISITOS:"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"/>

                        <Button
                            android:id="@+id/btnEvento2"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Saber Más!"
                            android:textSize="12sp"
                            android:backgroundTint="#A1BBCE"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>