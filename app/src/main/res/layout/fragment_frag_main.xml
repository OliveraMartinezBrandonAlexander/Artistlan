<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.FragMain">

    <!-- MENÚ SUPERIOR DENTRO DEL FRAGMENT -->
    <include layout="@layout/layout_menu_superior" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <!-- CONTENIDO SCROLLEABLE -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContenido"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- TÍTULO PRINCIPAL -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="BIENVENIDO A ARTISTLAN"
                android:textColor="@android:color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-condensed-medium"/>

            <!-- SUBTÍTULO -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:text="Top del semestre"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp"
                android:fontFamily="sans-serif-light"/>

            <!-- SECCIÓN DEL CARRUSEL -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <!-- Botón Izquierdo -->
                <ImageButton
                    android:id="@+id/btnCarruselIzquierdo"
                    android:layout_width="40dp"
                    android:layout_height="200dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/botonizquierdoprincipal"
                    android:scaleType="fitCenter"
                    android:contentDescription="Imagen anterior"/>

                <!-- ViewPager2 del carrusel -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerCarrusel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/btnCarruselIzquierdo"
                    android:layout_toStartOf="@id/btnCarruselDerecho"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"/>

                <!-- Botón Derecho -->
                <ImageButton
                    android:id="@+id/btnCarruselDerecho"
                    android:layout_width="40dp"
                    android:layout_height="200dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/botonderechoprincipal"
                    android:scaleType="fitCenter"
                    android:contentDescription="Siguiente imagen"/>
            </RelativeLayout>

            <!-- SECCIÓN EVENTOS PRÓXIMOS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:text="Eventos próximos:"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <!-- Contenedor de eventos tipo CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:padding="12dp"
                android:backgroundTint="#F0F0F0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <!-- Evento 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="• Concurso de óleo en Bellas Artes\nFECHA:\nDESCRIPCIÓN:\nREQUISITOS:"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"/>

                        <Button
                            android:id="@+id/btnEvento1"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Saber Más!"
                            android:textSize="12sp"
                            android:backgroundTint="#A1BBCE"/>
                    </LinearLayout>

                    <!-- Evento 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="• Concurso de óleo en Artes Bellas\nFECHA:\nDESCRIPCIÓN:\nREQUISITOS:"
                            android:textColor="@android:color/black"
                            android:textSize="14sp"/>

                        <Button
                            android:id="@+id/btnEvento2"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="Saber Más!"
                            android:textSize="12sp"
                            android:backgroundTint="#A1BBCE"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
