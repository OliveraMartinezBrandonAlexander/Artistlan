<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.FragSubirObra">

    <include layout="@layout/layout_menu_superior" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:paddingEnd="30dp"
        android:paddingBottom="30dp">

        <ScrollView
            android:id="@+id/fragScrollSubirObra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:clipToPadding="false">
            <LinearLayout
                android:id="@+id/IsLayCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes_redondeados"
                android:backgroundTint="#A6A1BBCE"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageButton
                    android:id="@+id/btnRegresar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/regresarimg"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/IsTxtTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Subir Obra"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/IsTxtDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Ingresa la siguiente información:"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imgPreviewObra"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imagensubirobra" />

                <Button
                    android:id="@+id/btnSubirImg"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#6C6C6C"
                    android:padding="10dp"
                    android:text="SUBIR IMAGEN"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/IsTxtTituloObra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Título de la Obra"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/tituloObra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/editredondo"
                    android:hint="Titulo de la obra"
                    android:inputType="textCapWords"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:textColor="#202020" />

                <TextView
                    android:id="@+id/IsTxtEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Estado"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/radioGroupOpciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/rbdventa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="En venta"
                        android:layout_marginLeft="30dp"/>

                    <RadioButton
                        android:id="@+id/rbexhibicion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="En exhibición"
                        android:layout_marginLeft="40dp"/>

                </RadioGroup>

                <TextView
                    android:id="@+id/IsTxtDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Descripción"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/editredondo"
                    android:gravity="top|start"
                    android:hint="Descripción detallada de la obra"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:padding="10dp"
                    android:textColor="#202020" />

                <TextView
                    android:id="@+id/IsTxtPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Precio en pesos mxn "
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/precio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/editredondo"
                    android:hint="Precio (ej. 1500.00)"
                    android:inputType="numberDecimal"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:textColor="#202020" />

                <TextView
                    android:id="@+id/IsTxtMedidas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Medidas en cm "
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/medidas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/editredondo"
                    android:hint="Ej. 50cm x 70cm"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:textColor="#202020" />
                <TextView
                    android:id="@+id/IsTxtTecnica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Técnica"
                    android:textSize="14sp"/>
                <EditText
                    android:id="@+id/edit_text_tecnica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/editredondo"
                    android:hint="Técnica de la obra "
                    android:inputType="textCapSentences"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:textColor="#202020"/>

                <TextView
                    android:id="@+id/IsTxtCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Categoría"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/categoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/editredondo"
                    android:padding="10dp" />



                <Button
                    android:id="@+id/btnSubirObra"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#6C6C6C"
                    android:padding="10dp"
                    android:text="SUBIR OBRA"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>