<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fon_ser"
    tools:context=".Fragments.FragSubirServicio">

    <include layout="@layout/layout_menu_superior" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="30dp"
        android:paddingEnd="30dp"
        android:paddingBottom="30dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/lsLayCardServicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordes_redondeados"
                android:backgroundTint="#A6A1BBCE"
                android:orientation="vertical"
                android:padding="15dp">

                <ImageButton
                    android:id="@+id/btnRegresarServicio"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/regresarimg"
                    android:background="@android:color/transparent"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/lsTxtTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Subir Servicio"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/lsTxtDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Ingresa la siguiente información de tu servicio:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lsTxtCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-black"
                    android:text="Categoría"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spinnerCategoriaServicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/editredondo"
                    android:padding="10dp" />

                <TextView
                    android:id="@+id/lsTxtTituloServicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Título del servicio"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etTituloServicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/editredondo"
                    android:hint="Ej. Retrato digital, sesión de fotos, etc."
                    android:inputType="textCapSentences"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:textColor="#202020" />

                <TextView
                    android:id="@+id/lsTxtDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Descripción"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etDescripcionServicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/editredondo"
                    android:gravity="top|start"
                    android:hint="Describe qué incluye tu servicio, tiempos de entrega, etc."
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:padding="10dp"
                    android:textColor="#202020" />

                <TextView
                    android:id="@+id/lsTxtTecnica"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Técnica que manejo"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etTecnicaServicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/editredondo"
                    android:hint="Ej. Ilustración digital, óleo, acrílico, fotografía, etc."
                    android:inputType="textCapSentences"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:textColor="#202020" />

                <TextView
                    android:id="@+id/lsTxtContacto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="Contacto"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etContactoServicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/editredondo"
                    android:hint="Correo, teléfono o @usuario para que te contacten"
                    android:inputType="textEmailAddress|textPersonName|textVisiblePassword"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="10dp"
                    android:textColor="#202020" />

                <Button
                    android:id="@+id/btnPublicarServicio"
                    android:layout_width="180dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:text="PUBLICAR"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />



            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>

