<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootPerfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:focusable="true"
    tools:context=".Fragments.FragVerPerfil">

    <include layout="@layout/layout_menu_superior" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollPerfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/contenedorPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="14dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPerfilInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="#F3E8FF">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="18dp">

                        <ImageButton
                            android:id="@+id/btnEditarPefil"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:background="@android:color/transparent"
                            android:padding="6dp"
                            android:src="@drawable/ic_edit"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- Foto -->
                        <ImageView
                            android:id="@+id/imgPerfil"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/img_redonda"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/fotoperfilprueba"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- Nombre centrado -->
                        <TextView
                            android:id="@+id/VrpTxvNombre"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="#111111"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:hint="Nombre"
                            app:layout_constraintTop_toBottomOf="@id/imgPerfil"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- Descripción visible (se queda sola) -->
                        <TextView
                            android:id="@+id/VrpTxvDescripcion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="12dp"
                            android:background="@drawable/editredondo"
                            android:backgroundTint="#A1BBCE"
                            android:textColor="#111111"
                            android:textSize="14sp"
                            android:lineSpacingExtra="3dp"
                            android:maxLines="4"
                            android:ellipsize="end"
                            android:hint="Descripción"
                            app:layout_constraintTop_toBottomOf="@id/VrpTxvNombre"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- SECCIÓN OCULTA (UN SOLO RECUADRO AZUL) -->
                        <LinearLayout
                            android:id="@+id/expanded_section_perfil"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:orientation="vertical"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@id/VrpTxvDescripcion"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <!-- Panel azul único -->
                            <LinearLayout
                                android:id="@+id/panelInfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/editredondo"
                                android:backgroundTint="#A1BBCE"
                                android:padding="14dp">

                                <!-- Usuario -->
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Usuario"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    android:textColor="#111111"/>

                                <TextView
                                    android:id="@+id/VrpTxvUsuario"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textColor="#111111"
                                    android:hint="Usuario" />

                                <!-- Correo -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Correo"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    android:textColor="#111111"/>

                                <TextView
                                    android:id="@+id/VrpTxvCorreo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textColor="#111111"
                                    android:hint="Correo" />

                                <!-- Teléfono -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Teléfono"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    android:textColor="#111111"/>

                                <TextView
                                    android:id="@+id/VrpTxvTelefono"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textColor="#111111"
                                    android:hint="Teléfono" />

                                <!-- Redes -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Redes"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    android:textColor="#111111"/>

                                <TextView
                                    android:id="@+id/VrpTxvRedes"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textColor="#111111"
                                    android:hint="Redes sociales" />

                                <!-- Fecha Nac -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Fecha de nacimiento"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    android:textColor="#111111"/>

                                <TextView
                                    android:id="@+id/VrpTxvFecNac"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textColor="#111111"
                                    android:hint="Fecha de nacimiento" />

                                <!-- Categoría -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Categoría"
                                    android:textStyle="bold"
                                    android:textSize="13sp"
                                    android:textColor="#111111"/>

                                <TextView
                                    android:id="@+id/VrpTxvCategoria"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textColor="#111111"
                                    android:hint="Categoría" />

                            </LinearLayout>
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- BOTONES: SUBIR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubirObra"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Subir Obra"
                        android:textAllCaps="false"
                        android:backgroundTint="#A1BBCE"
                        app:cornerRadius="18dp"
                        app:icon="@drawable/ic_img"
                        app:iconGravity="textStart"
                        app:iconPadding="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSubirServicio"
                        android:layout_width="0dp"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:text="Subir Servicio"
                        android:textAllCaps="false"
                        android:backgroundTint="#A1BBCE"
                        app:cornerRadius="18dp"
                        app:icon="@drawable/ic_srv"
                        app:iconGravity="textStart"
                        app:iconPadding="10dp" />
                </LinearLayout>

                <!-- BOTONES: EDITAR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center">

<!--                    <com.google.android.material.button.MaterialButton-->
<!--                        android:id="@+id/btnEditarObra"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="54dp"-->
<!--                        android:layout_weight="1"-->
<!--                        android:layout_marginEnd="8dp"-->
<!--                        android:text="Editar Obra"-->
<!--                        android:textAllCaps="false"-->
<!--                        android:backgroundTint="#A1BBCE"-->
<!--                        app:cornerRadius="18dp"-->
<!--                        app:icon="@drawable/ic_img"-->
<!--                        app:iconGravity="textStart"-->
<!--                        app:iconPadding="10dp" />-->

<!--                    <com.google.android.material.button.MaterialButton-->
<!--                        android:id="@+id/btnEditarServicio"-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="54dp"-->
<!--                        android:layout_weight="1"-->
<!--                        android:text="Editar Servicio"-->
<!--                        android:textAllCaps="false"-->
<!--                        android:backgroundTint="#A1BBCE"-->
<!--                        app:cornerRadius="18dp"-->
<!--                        app:icon="@drawable/ic_srv"-->
<!--                        app:iconGravity="textStart"-->
<!--                        app:iconPadding="10dp" />-->
                </LinearLayout>

                <!-- Selector tipo pill -->
                <FrameLayout
                    android:id="@+id/segmentContainer"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/bg_segment_container"
                    android:padding="4dp">

                    <View
                        android:id="@+id/segmentIndicator"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_segment_indicator" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnMiArte"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="MIS OBRAS"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF" />

                        <Button
                            android:id="@+id/btnMisServicios"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="MIS SERVICIOS"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="#1E3A8A" />
                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/contenedorFragmentsPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="400dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
