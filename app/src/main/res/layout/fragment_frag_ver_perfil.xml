<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.FragVerPerfil">

    <include layout="@layout/layout_menu_superior" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/contenedorPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgPerfil"
                    android:layout_width="92dp"
                    android:layout_height="92dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/img_redonda"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fotoperfilprueba" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/nombreArtista"
                        android:layout_width="200dp"
                        android:layout_height="35dp"
                        android:background="@drawable/editredondo"
                        android:backgroundTint="#A1BBCE"
                        android:gravity="center"
                        android:hint="Nombre Artista" />

                    <Button
                        android:id="@+id/btnEditarPefil"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#A1BBCE"
                        android:text="Editar Perfil" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/DescripcionPersonal"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/editredondo"
                android:backgroundTint="#A1BBCE"
                android:gravity="center"
                android:hint="Breve descripciÃ³n personal, premios, estudios, etc."
                android:padding="12dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="#999" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMiArte"
                    android:layout_width="130dp"
                    android:layout_height="55dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#C0A898"
                    android:text="Mi Arte" />

                <Button
                    android:id="@+id/btnArtista"
                    android:layout_width="130dp"
                    android:layout_height="55dp"
                    android:layout_margin="8dp"
                    android:backgroundTint="#CFBEB3"
                    android:text="Artista" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/pin1" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/pin2" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/pin3" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/pin4" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
