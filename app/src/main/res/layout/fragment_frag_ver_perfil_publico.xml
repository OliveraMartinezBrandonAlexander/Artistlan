<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootPublicPerfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.FragVerPerfilPublico">

    <include layout="@layout/layout_menu_superior" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- CARD PERFIL -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPerfilPublico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:backgroundTint="#F3E8FF"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <!-- Foto + Nombre centrados -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/imgPerfilPublico"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:background="@drawable/img_redonda"
                            android:clipToOutline="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/fotoperfilprueba"/>

                        <TextView
                            android:id="@+id/tvNombrePublico"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="Usuario"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@android:color/black"
                            android:maxLines="2"
                            android:ellipsize="end"/>
                    </LinearLayout>

                    <!-- Descripción (siempre visible) -->
                    <TextView
                        android:id="@+id/tvDescripcionPublico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Descripción"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:background="@drawable/editredondo"
                        android:backgroundTint="#A1BBCE"
                        android:padding="12dp"/>

                    <!-- Sección expandible -->
                    <LinearLayout
                        android:id="@+id/expandedInfoPublico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:background="@drawable/editredondo"
                        android:backgroundTint="#A1BBCE"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvCorreoPublico"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Correo: ---"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvTelefonoPublico"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Teléfono: ---"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvRedesPublico"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Redes: ---"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvFecNacPublico"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Fecha: ---"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvCategoriaPublico"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Categoría: ---"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tabs estilo bonito (como Mis Obras / Mis Servicios) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTabs"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:backgroundTint="#E9F2FF"
                android:elevation="6dp"
                android:radius="16dp">

                <FrameLayout
                    android:id="@+id/tabsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="6dp">

                    <!-- Indicador -->
                    <View
                        android:id="@+id/tabIndicator"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:background="@drawable/editredondo"
                        android:backgroundTint="#2F6FED" />

                    <!-- Botones -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/btnTabObras"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="OBRAS"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>

                        <TextView
                            android:id="@+id/btnTabServicios"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="SERVICIOS"
                            android:textStyle="bold"
                            android:textColor="#2F6FED"/>
                    </LinearLayout>

                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Contenedor para los fragments hijos -->
            <FrameLayout
                android:id="@+id/contenedorFragmentsPerfilPublico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:minHeight="420dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
