<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"

    app:cardCornerRadius="22dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#F3E8FF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp">

        <!-- Foto de perfil -->
        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@null"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nombre al lado de la foto (centrado verticalmente en ese espacio) -->
        <TextView
            android:id="@+id/nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:text="Nombre del Artista"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111111"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:breakStrategy="high_quality"
            android:hyphenationFrequency="full"
            app:layout_constraintStart_toEndOf="@id/imgPerfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgPerfil"
            app:layout_constraintBottom_toBottomOf="@id/imgPerfil" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/descripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Descripción del artista"
            android:textSize="14sp"
            android:textColor="#2A2A2A"
            android:lineSpacingExtra="3dp"
            android:maxLines="4"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/imgPerfil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Divisor -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="#22000000"
            app:layout_constraintTop_toBottomOf="@id/descripcion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sección expandible -->
        <LinearLayout
            android:id="@+id/expanded_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Categoría solo cuando expandes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoría"
                android:textStyle="bold"
                android:textColor="#111111"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Categoría"
                android:textColor="#111111"
                android:textSize="13sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:lineSpacingExtra="2dp"
                android:maxLines="3"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/mensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Obras del artista:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#111111" />

            <!-- Mini obras grandes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgMini1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/imgMini2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/imgMini3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <!-- Botón al final -->
            <Button
                android:id="@+id/btnVisitar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="Visitar"
                android:textAllCaps="false"
                android:backgroundTint="#A1BBCE" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
