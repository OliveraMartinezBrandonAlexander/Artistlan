<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"

    app:cardElevation="10dp"
    app:cardCornerRadius="22dp"
    app:cardBackgroundColor="#F3E8FF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp">

        <ImageView
            android:id="@+id/imgAutor"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@null"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/autor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:text="Autor"
            android:textColor="#111111"
            android:textSize="16sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:breakStrategy="high_quality"
            android:hyphenationFrequency="full"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/imgAutor"
            app:layout_constraintEnd_toStartOf="@id/categoria"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/imgAutor"
            app:layout_constraintBottom_toBottomOf="@id/imgAutor" />

