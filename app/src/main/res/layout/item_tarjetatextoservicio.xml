<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"

    app:cardCornerRadius="22dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="#F3E8FF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="14dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp">

        <ImageView
            android:id="@+id/imgAutor"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@null"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/autor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:text="Autor"
            android:textStyle="bold"
            android:textColor="#111111"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:breakStrategy="high_quality"
            android:hyphenationFrequency="full"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/imgAutor"
            app:layout_constraintEnd_toStartOf="@id/categoria"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/imgAutor"
            app:layout_constraintBottom_toBottomOf="@id/imgAutor" />

        <TextView
            android:id="@+id/categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ilustración"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:maxLines="1"
            android:ellipsize="end"/>


        <TextView
            android:id="@+id/titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Título del servicio"
            android:textStyle="bold"
            android:textColor="#111111"
            android:textSize="19sp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:breakStrategy="high_quality"
            android:hyphenationFrequency="full"
            app:layout_constraintTop_toBottomOf="@id/imgAutor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/descripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Descripción breve"
            android:textColor="#2A2A2A"
            android:textSize="14sp"
            android:lineSpacingExtra="3dp"
            android:maxLines="4"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="#22000000"
            app:layout_constraintTop_toBottomOf="@id/descripcion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/expanded_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <TextView
                android:id="@+id/tecnicas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Técnicas"
                android:textColor="#2A2A2A"
                android:textSize="14sp"
                android:lineSpacingExtra="3dp" />

            <TextView
                android:id="@+id/contacto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Contacto"
                android:textColor="#2A2A2A"
                android:textSize="14sp"
                android:lineSpacingExtra="3dp" />

            <Button
                android:id="@+id/btnVisitar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="Visitar"
                android:textAllCaps="false"
                android:backgroundTint="#A1BBCE" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
