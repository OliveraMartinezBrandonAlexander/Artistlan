<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MenuInferior"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#a1bbce"
    android:orientation="horizontal"
    android:gravity="center">

    <ImageButton
        android:id="@+id/btnInicio"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/inicio"
        android:scaleType="fitCenter"
        android:padding="4dp"
        android:contentDescription="Inicio" />

    <ImageButton
        android:id="@+id/btnServicios"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/servicios"
        android:scaleType="fitCenter"
        android:padding="4dp"
        android:contentDescription="Servicios" />

    <ImageButton
        android:id="@+id/btnArtistas"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/artista"
        android:scaleType="fitCenter"
        android:padding="4dp"
        android:contentDescription="Artistas" />

    <ImageButton
        android:id="@+id/btnArte"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/arte"
        android:scaleType="fitCenter"
        android:padding="4dp"
        android:contentDescription="Arte" />

    <ImageButton
        android:id="@+id/btnPerfil"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/cuenta"
        android:scaleType="fitCenter"
        android:padding="4dp"
        android:contentDescription="Perfil" />
</LinearLayout>