<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutBarraSuperior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CAD7E0"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="24dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="40dp"
        android:maxHeight="36dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"
        android:contentDescription="Logo ARTISTLAN" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="4dp"
        android:text="ARTISTLAN"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:src="@drawable/favoritos"
        android:id="@+id/btnFavoritos"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/btnMenuSuperior"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_menu"
        android:contentDescription="MenÃº superior"
        android:padding="8dp" />

</LinearLayout>
